      <div class="pcc-percents-wrapper">
          Frånvarande: {{stats.absence}}%
      </div>
    </div>
  </div>
</div>
{{/if}}

{{#with stats.blank}}
<div class="pie-blank">
  <div class="progress-pie-chart {{votedBlank.gt50}}">
    <div class="ppc-progress">
      <div class="ppc-progress-fill" style={{votedBlank.style}}></div>
    </div>
    <div class="ppc-percents">
      <div class="pcc-percents-wrapper">
          Avstår: {{stats.blank}}%
      </div>
    </div>
  </div>
</div>
{{/with}}
